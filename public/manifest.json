{
  "manifest_version": 3,

  "name": "Warpspace Grind",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "chrome_url_overrides": {
    "newtab": "new_tab.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "commands": {
    "enter-warpspace": {
      "suggested_key": {
        "default": "Ctrl+Shift+6",
        "mac": "Command+Shift+5"
      },
      "description": "Enter Warpspace",
      "global": true
    }
  },

  "content_scripts": [
      {
        "all_frames": false,
          "matches": ["<all_urls>"],
          "run_at": "document_start",
          "js": ["js/content_script.js"],
          "css": ["content.css"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "history",
    "storage",
    "scripting",
    "unlimitedstorage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "web_accessible_resources": [{
    "resources": ["app.html"],
    "matches": ["<all_urls>"]
  }]
}
